<section class="pagination">
  <!-- Previous page arrow -->
  <% if(hasPreviousPage){ %>
  <a href="?page=<%= previousPage %>" class="pagination-arrow" title="Previous page">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
      <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
    </svg>
  </a>
  <% } %>
  
  <!-- First page -->
  <% if(currentPage != 1){ %>
  <a href="?page=1">1</a>
  <% } %>
  
  <!-- Ellipsis if needed -->
  <% if(hasPreviousPage && previousPage > 2 && currentPage > 3){ %>
  <span class="pagination-ellipsis">...</span>
  <% } %>
  
  <!-- Previous page -->
  <% if(hasPreviousPage && previousPage !== 1){ %>
  <a href="?page=<%= previousPage %>"><%= previousPage %></a>
  <% } %>
  
  <!-- Current page -->
  <a href="?page=<%= currentPage %>" class="active"><%= currentPage %></a>
  
  <!-- Next page -->
  <% if(hasNextPage){ %>
  <a href="?page=<%= nextPage %>"><%= nextPage %></a>
  <% } %>
  
  <!-- Ellipsis if needed -->
  <% if(hasNextPage && nextPage < lastPage - 1 && currentPage < lastPage - 2){ %>
  <span class="pagination-ellipsis">...</span>
  <% } %>
  
  <!-- Last page -->
  <% if(lastPage !== currentPage && nextPage !== lastPage){ %>
  <a href="?page=<%= lastPage %>"><%= lastPage %></a>
  <% } %>
  
  <!-- Next page arrow -->
  <% if(hasNextPage){ %>
  <a href="?page=<%= nextPage %>" class="pagination-arrow" title="Next page">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
      <path d="M8.59 16.59L10 18l6-6-6-6-1.41 1.41L13.17 12z"/>
    </svg>
  </a>
  <% } %>
</section>